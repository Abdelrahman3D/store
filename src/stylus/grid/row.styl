.row
  position: relative
  display: flex
  flex-wrap: wrap
  margin-right: $gutter * -1
  margin-left: $gutter * -1
  width: auto

  &.is-center
    justify-content: center

  &.is-end
    justify-content: flex-end

  &.is-start
    justify-content: flex-start

  &.is-middle
    align-items: center

  &.is-top
    align-items: flex-start

  &.is-bottom
    align-items: flex-end

  &.is-vertical
    flex-direction: column
    align-items: flex-start

  &.is-shrink
    >.column:not([class*='is-'])
      flex: 0 0 auto

  &.is-fit
    margin-right: 0
    margin-left: 0

    >.column
      padding: 0