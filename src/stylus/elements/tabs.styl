.tabs
  display: flex
  margin: 0
  padding: ($padding * 2) 0
  border-bottom: 1px solid $gray
  list-style: none

  li
    margin: 0
    text-transform: capitalize

  a
    padding: ($padding * 2)
    background-color: $white
    color: $slategray
    cursor: pointer

  .icon
    margin-right: 0

  .is-active a,
  a:hover
    border-bottom: 2px solid $primary
    color: $primary
