/**
 * Device Breakpoint
 */
$mobile ?= 0
$tablet ?= 768px
$desktop ?= 991px
$widescreen ?= 1360px
$ultrawide ?= 1920px
/**
 * style
 */
$margin ?= 0.5em
$padding ?= 0.3em
$padding-px ?= 20px
$modal-spacing ?= 2em
$border-radius ?= 4px
$border-radius-large ?= 8px
/**
 * grid
 */
$columns ?= 12
$gutter ?= 20px
$gutter-full ?= 8vw
$container-mobile ?= 100%
$container-tablet ?= $tablet - (22 * 2)
$container-desktop ?= $desktop - (22 * 3)
$container-widescreen ?= $widescreen - (22 * 4)
$container-ultrawide ?= $ultrawide - (22 * 5)
$round-digits ?= 4
